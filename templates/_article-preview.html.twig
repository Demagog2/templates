{% if type == 'column' %}
<article class="row preview">
  <div class="large-8 columns">
    <h1><a class="title" href="{{ link }}" >Komentář: {{ title }}</a></h1>
    <p class="clickthrough"><i>{{ pubDate }}</i> &mdash; {{ lead }}  <a href="{{ link }}">Číst&nbsp;dál&nbsp;<span class="glyphicons circle_arrow_right"><i></i></span></a></p>
  </div>

  <div class="large-4 columns">
    <div class="show-for-medium-up">
      <a title="{{ title }}" href="{{ link }}" >
        <img src="{{ picture }}" alt="{{ title }}" />
      </a>
    </div>
  </div>
</article>
{% elseif type == 'oneSource' %}
<article class="row preview">
  <div class="large-4 columns">
    <div class="show-for-medium-up">
      <a title="{{ title }}" href="{{ link }}" >
        <img src="{{ picture }}" alt="{{ title }}" />
      </a>
    </div>
  </div>

  <div class="large-8 columns">
    <h1><a class="title" href="{{ link }}" >{{ title }}</a></h1>
      <div class="speakers">
        {% for speaker in speakers %}
        <div class="photo-wrapper" title="{{ speaker.name }}"><img src="{{ speaker.photo }}"></div>
        {% endfor %}
      </div>

    <p class="clickthrough"><i>{{ source }}</i> &mdash; {{ lead }}  <a href="{{ link }}">Prohlédnout&nbsp;diskusi&nbsp;<span class="glyphicons circle_arrow_right"><i></i></span></a></p>
  </div>
</article>
{% endif %}
